
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <%= link_to t("sample_app"), root_path, id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("_header.home_link"), home_path %></li>
      <li><%= link_to t("_header.help_link"), help_path %></li>
      <% if logged_in? %>
        <li><%= link_to t("_header.users_link"), users_path %></li>
        <li><%= link_to current_user.name, current_user%></li>
        <li class="dropdown pull-right">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t("_header.account") %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("sessions.profile"), current_user %></li>
            <li><%= link_to t("sessions.settings"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li> <%= link_to t("sessions.log_out"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("sessions.log_in"), login_path %></li>
      <% end %>
    </ul>
  </nav>
  </div>
</header>
